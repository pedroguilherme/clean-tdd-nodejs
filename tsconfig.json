{
  "compilerOptions": {
    // Exportar os TS convertidos para JS
    "outDir": "dist",
    "rootDirs": [
      "src"
    ],
    "baseUrl": "src",
    // Com Import./Export. não mais require
    "module": "commonjs",
    "target": "ES2021",
    "esModuleInterop": true,
    // Para debubar
    "sourceMap": true,
    // Habilita arquivos JS
    "allowJs": true,
    // Tratar caso o null seja atribuido por default
    "strictNullChecks": true,
    // Totalmente tipado, diz que deve ser especificado a tipagem
    "noImplicitAny": true,
    // Em caso de erro, não copílar
    "noEmitOnError": true,
    // Remover comentários na copilação,
    "removeComments": true,
    // Decorators
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ]
}